@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<div class=" container p-4">

    <div class="row p-3">

      <div class="col-6">
         <h2 class="text-primary">
                Categories
         </h>
        
      </div>

        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="create" asp-controller="Category"> <i class="bi bi-plus-circle-fill"></i>&nbsp <b>
                    create new category
                </b>
            </a>
        </div>
    </div>

</div>

<table class=" table table-bordered table-striped" style="width:100%">
    <thead>

        <tr>
            <th>
                Category name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Action
            </th>
        </tr>

    </thead>
    <tbody>
        @foreach(var iteam in Model)
        {
            <tr>
            <td>
                @iteam.Name
            </td>
            <td>
                @iteam.DisplayOrder
            </td>
            <td role="group">
                    <a asp-action="edit" asp-controller="Category" asp-route-id="@iteam.Id">
                        <i class="bi bi-pencil-square"></i>
                    </a>


                    <button>
                        <a asp-action="Delete" asp-controller="Category" asp-route-id="@iteam.Id">
                            <i class=" bi bi-trash3"></i>
                        </a>
                    </button>


            </td>
        </tr>
            
        }
        
    </tbody>

</table>

